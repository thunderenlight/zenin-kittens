<div container>
	
	<h1> Kittens!</h1>
		
		<table>
			<caption>Kitten Matrix</caption>
			<thead>
				<tr>
					<th>Name</th>
					<th>Age</th>
					<th>Cuteness</th>
					<th>Softness</th>
					<th>Toughness</th>
					<th>Description</th>
	
				</tr>
			</thead>
			<tbody>
			<%= @kittens.each do |kitten| %>

				<tr>
					<td><%= kitten.name %></td>
					<td><%= kitten.age %></td>
					<td><%= kitten.cuteness %></td>
					<td><%= kitten.softness %></td>
					<td><%= kitten.toughness %></td>
					<td><%= kitten.description %></td><br>
					<td><%= link_to 'Show', kitten %></td>
					<td><%= link_to 'Edit', edit_kitten_path(kitten) %></td>
					<td><%= link_to 'Destroy', kitten: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to 'New Kitten', new_kitten_path %>
</div>
<div class="flickr">


	<p> Search for a flickr user (and some of their photos) using their ID:</p>

	<br>
	
	<br>

		<%= form_tag("/", method: "get") do %>
		  <%= text_field_tag(:id) %>
		  <%= submit_tag("find da kitty") %>
		<% end %>

		<br><br>


	<ul>
	<% @photos.each do |p| %>
		<li>
				<%= link_to(image_tag(FlickRaw.url_t(info(p.id))),:class => 'flickr_photo')%> <br>
				<%= image_tag(FlickRaw.url_m(info(p.id)))%>
				<%= link_to(image_tag(FlickRaw.url_photopage(info(p.id))))%>
	
				<% end %>
		</li>
	</ul>
	
</div>